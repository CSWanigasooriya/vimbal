{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@vimbal/directive": ["libs/directive/src/index.ts"],
      "@vimbal/material": ["libs/material/src/index.ts"],
      "@vimbal/model": ["libs/model/src/index.ts"],
      "@vimbal/pipe": ["libs/pipe/src/index.ts"],
      "@vimbal/service": ["libs/service/src/index.ts"],
      "@vimbal/ui": ["libs/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
